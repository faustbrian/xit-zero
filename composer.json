{
    "name": "cline/xit",
    "description": "A CLI task management tool for xit format files.",
    "keywords": [
        "cli",
        "task-management",
        "xit",
        "todo"
    ],
    "homepage": "https://github.com/faustbrian/xit",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/faustbrian/xit/issues",
        "source": "https://github.com/faustbrian/xit"
    },
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel-zero/framework": "^12.0.2"
    },
    "require-dev": {
        "cline/php-cs-fixer": "^1.0.5",
        "ergebnis/composer-normalize": "^2.48",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.8.4|^4.1.3",
        "phpacker/phpacker": "^0.6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "xit"
    ],
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix",
        "test": "pest --coverage",
        "test:lint": "vendor/bin/php-cs-fixer check --diff",
        "test:unit": "pest --coverage"
    }
}
